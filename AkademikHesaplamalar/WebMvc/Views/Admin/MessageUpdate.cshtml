@model MyMessage

<head>
    <style>
        #MessageDivision{
            margin-bottom: 200px;
            margin-left: auto;
            margin-right: auto;
        }
       i{
          color: gray;
      }

    </style>
</head>



<div class="container row" id="MessageDivision">

<h3 class="col-md-6">Gönderen Ad : <i> @Model.FullName</i> </h3>
<h3 class="col-md-6 mb-5">Gönderen Mail : <i>  @Model.MailAdres </i> </h3>
<h4 class="text-center">Başlık  : <i style="margin-left:20px;">  @Model.Title </i> </h4>
<h5>Mesaj :</h5>
<br>
<p>
    @Model.Description
</p>

<br><br><br>

   <a class="btn btn-danger" asp-controller="Admin" asp-action="MessageDelete"
               asp-route-id="@Model.Id">Sil</a>
</div>

    
