        }
    </script>


<script>
     window.addEventListener('scroll', reveal);

  function reveal() {
      //hangi nesneler için seçeceğini belirtiyorum
      var reveals = document.querySelectorAll('.team');

      // bütün bu nesneleri dönüyorum ve başlangıç noktasını
      // windows.innerheight yardımıyla alıyorum
      for (var i = 0; i < reveals.length; i++) {
          var windowheight = window.innerHeight;
          var revealtop = reveals[i].getBoundingClientRect().top;
          var revealpoint = -50;

          // sayfanın üstünde kalan kısmı pointimizden küçük 
          // ise  acive classı ekliyoruz
          if (revealtop < windowheight - revealpoint) {
              // class ekleme işlemi
            //   console.log("revealtop",revealtop)
            //   console.log("point",windowheight - revealpoint)
              reveals[i].classList.add('active');
            //   console.log('aktif')
          }
     
         


      }
  }

</script>
