@model List<MyRole>

<div class="container" style="margin-bottom: 200px;">
    <h3>Roller</h3>
    <hr />

    <table class="table table table-bordered table-striped">
        <tr>
            <th>Id</th>
            <th>Rol ismi</th>
            <th>Silme</th>
            <th>Güncelleme</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <form asp-controller="UltraAdmin" asp-action="RoleDelete" asp-route-id="@item.Id" method="post">

                        <button class="btn btn-success" type="submit">sil</button>
                    </form>
                </td>
                <td><a id="Roleupdate" class="btn btn-info text-white" asp-controller="UltraAdmin" 
                    asp-action="RoleUpdate" asp-route-id="@item.Id">Güncelle</a></td>
            </tr>

        }
    </table>

    <a asp-controller="UltraAdmin" asp-action="RoleCreate" class="btn btn-info text-white">Role Oluştur</a>


</div>
<script>
    const myFunction = () => {
        let link = document.querySelector('#Role');
        link.classList.add("active");
    }
    myFunction();
</script>