@model List<RoleAssignDto>


<div class="container">

    <h3>Kullanıcıya rol atama(@ViewBag.userName)</h3>
    <hr />

    <form asp-controller="UltraAdmin" asp-action="RoleAssign" method="post" style="margin-bottom: 200px;">

        @for (int i = 0; i < Model.Count(); i++)
        {// forla dönmeyince sorun oluşabilir
            <div class="form-check">
                <input asp-for="@Model[i].Exist" type="checkbox" class="form-check-input" />
                <label asp-for="@Model[i].RoleId" class="form-check-label">@Model[i].RoleName</label>

                <input asp-for="@Model[i].RoleName" type="hidden" />
                <input asp-for="@Model[i].RoleId" type="hidden" />
            </div>

        }
        <input class="btn btn-success" type="submit" value="Rol ata" />
    </form>

</div>
<script>
    const myFunction = () => {
        let link = document.querySelector('#Member');
        link.classList.add("active");
    }
    myFunction();
</script>