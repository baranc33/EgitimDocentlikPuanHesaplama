@model DocentlikPuanHesaplama.ViewModels.LoginViewModel

@{
    Layout=null;
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mersin Üniverstesi</title>
    <script src="~/jquery/jquery.js"></script>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/login.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,700" rel="stylesheet">

	    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />
 


</head>
<body>

 
<div class="offset-md-3 mt-5 navLinks" style="position:fixed">
    <a asp-action="Index" asp-controller="home"
	class="btn  text-light rounded-pill  py-2 px-4 ms-3"  >Ana Sayfa</a>
	<br />
	<br />
	  <a asp-action="SignUp" asp-controller="home" 
	class="btn  text-light rounded-pill   py-2 px-4 ms-3"  >Kayıt Ol</a>
</div>
 
<div class="container">
	<div class="screen">
		<div class="screen__content">
			<form class="login" asp-action="Login">
					<div asp-validation-summary="ModelOnly" class="text-danger"
					style="margin-top:-64px"></div>
				<div class="login__field">

					<i class="login__icon fas fa-user"></i>
					<input type="text" class="login__input" placeholder="Kullanıcı Adı  / Email" asp-for="UserName">
				</div>
				<div class="login__field">
					<i class="login__icon fas fa-lock"></i>
					<input type="password" class="login__input" placeholder="Şifreniz"asp-for="Password">
				</div>
				<button class="button login__submit">
					<span class="button__text">Giriş Yap</span>
					<i class="button__icon fas fa-chevron-right"></i>
				</button>				
			</form>
				<h4 style="text-align:right;color:white;margin-top:2em"><span style="margin-right:10px">Sosyal Medya Girişleri </span></h4>

				<div class="social-icons">

					<a href="#" ><i class="fa-brands fa-google-plus-g"></i>  </a>
					<a href="#"><i class="fa-brands fa-facebook"></i>  </a>
					<a href="#" ><i class="fa-brands fa-windows"></i>  </a>
			</div>
		</div>
		<div class="screen__background">
			<span class="screen__background__shape screen__background__shape4"></span>
			<span class="screen__background__shape screen__background__shape3"></span>		
			<span class="screen__background__shape screen__background__shape2"></span>
			<span class="screen__background__shape screen__background__shape1"></span>
		</div>		
	</div>
</div>

</body>
